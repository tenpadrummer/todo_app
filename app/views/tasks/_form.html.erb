<%= form_with model: @task, local: true do |f|%>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter task name" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control', placeholder: "Enter task detail" %>
  </div>
  <div class="form-group">
    <%= f.label :datetime, "日程" %>
    <%= f.datetime_select :deadline, {use_month_numbers: true, start_year: Date.today.year, datetime_separator: '<h4>時間</h4>'}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :finished, class: 'form-control'%>
  </div>
  <%= f.submit btn_msg %>
<% end %>